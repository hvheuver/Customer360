<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.delaware.hvh.trac2018.controller.Master"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title">
				<content>
					<List items="{/ZV_ZVT18_CUSTM_HVH}">
						<ObjectListItem title="{name}" type="Navigation" press="onCustomerPress">
							<attributes>
								<ObjectAttribute title="{i18n>Master.List.Number}"  text="{path: 'CustomerNumber', formatter: '.formatter.addLeadingZero'}" />
								<ObjectAttribute title="{i18n>Master.List.City}" text="{city}" />
								<ObjectAttribute title="{i18n>Master.List.Country}" text="{country}" />
							</attributes>
						</ObjectListItem>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>